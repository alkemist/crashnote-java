<?xml version="1.0" encoding="ISO-8859-1"?>
<web-app
    xmlns="http://java.sun.com/xml/ns/javaee"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd"
    version="2.5" metadata-complete="true">

    <!-- CRASHNOTE -->
    <filter>
        <filter-name>CrashnoteFilter</filter-name>
        <filter-class>com.crashnote.servlet.CrashnoteFilter</filter-class>
        <init-param>
            <param-name>enabled</param-name>
            <param-value>true</param-value>
        </init-param>
        <init-param>
            <param-name>key</param-name>
            <param-value>00000000-0000-0000-0000-000000000000</param-value>
        </init-param>
        <init-param>
            <param-name>host</param-name>
            <param-value>127.0.0.3</param-value>
        </init-param>
        <init-param>
            <param-name>secure</param-name>
            <param-value>false</param-value>
        </init-param>
    </filter>

    <filter-mapping>
        <filter-name>CrashnoteFilter</filter-name>
        <url-pattern>/*</url-pattern>
    </filter-mapping>

    <!-- ERROR FILTER -->
    <filter>
        <filter-name>ErrorFilter</filter-name>
        <filter-class>com.crashnote.servlet.test.defs.ErrorFilter</filter-class>
    </filter>

    <filter-mapping>
        <filter-name>ErrorFilter</filter-name>
        <url-pattern>/*</url-pattern>
    </filter-mapping>

</web-app>
